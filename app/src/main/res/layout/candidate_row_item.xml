<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundcolor"
    android:paddingBottom="@dimen/row_padding"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin"
    android:paddingTop="@dimen/row_padding">

    <RelativeLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="@dimen/thumbnail"
                    android:layout_height="@dimen/thumbnail"
                    android:layout_centerVertical="true"

                    android:layout_marginLeft="@dimen/row_padding" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/thumbnail"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/candidate_name"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Jose Rafael Mata Milano"
                    android:textSize="@dimen/contact_name" />

                <TextView
                    android:id="@+id/grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/thumbnail"
                    android:textColor="@color/candidate_number"
                    android:text="septimo"
                    android:textSize="@dimen/contact_number" />

                <TextView
                    android:id="@+id/group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/grade"
                    android:layout_toRightOf="@id/thumbnail"
                    android:textColor="@color/candidate_number"
                    android:text="1"
                    android:textSize="@dimen/contact_number"
                    />

                <TextView
                    android:id="@+id/tvoto"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/thumbnail"
                    android:layout_marginLeft="20dp"
                    android:text="12 Votos"
                    android:layout_below="@id/group"
                    android:textSize="@dimen/tvoto_font_size"/>

            </RelativeLayout>














        </android.support.v7.widget.CardView>
    </RelativeLayout>



</LinearLayout>